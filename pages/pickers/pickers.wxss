/* pages/pickers/pickers.wxss */
.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
    z-index: 9999;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    animation: main-show 0.25s forwards;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.head {
    box-shadow: inset 0 -1px 0 0 #F0F0F0;
    height: 50px;
    position: relative;
    padding: 0 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.head .cancel {
    color: #646464;
    font-size: 16px;
    line-height: 40px;
}

.head .title {
    color: #323232;
    font-size: 17px;
    font-weight: 500;
}

.head .done {
    color: #FA2878;
    font-size: 16px;
    line-height: 40px;
}

.picker {
    height: 240px;
    margin: 12px 15px;
}

.picker .indicator {
    height: 48px;
}

.picker .item {
    color: #323232;
    font-size: 17px;
    text-align: center;
    line-height: 48px;
}