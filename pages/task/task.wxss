/* pages/task/task.wxss */
page{
    background-color: #F7F8FC;
}
.task {

}
.input-container {
    background-color: white;
    padding-bottom: 50px;
}
.input-wrapper{
    position: relative;
    border-bottom: 1px solid #f5f5f5;
    margin: 0 10px;
}
.input-wrapper .input-title {
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    font-weight: normal;
    color: #646464;
    vertical-align: middle;
}
.input-wrapper .input {
    height: 50px;
    width: 70%;
    float: right;
    vertical-align: middle;
    text-align: right;
}
.input-wrapper .select{
    height: 50px;
    width: 70%;
    float: right;
    line-height: 50px;
    text-align: right;
}

.input-wrapper .editor{
    background-color: #F7F8FC;
    width: 100%;
    margin-bottom: 10px;
    padding:5px;
    font-size: 14px;
    height: 200px;
    display: block;
}
.input-wrapper .number{
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 14px;
    color: #C8C8C8;

}
.toolBar {
    background-color: white;
    box-shadow: inset 0 1px 0 0 #F0F0F0;
    height: 50px;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
    padding: 0 15px;
    z-index: 2;
}

.toolBar .submit {
    background: linear-gradient(90deg, #07c160, #06c100);
    color: white;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    line-height: 40px;
    border-radius: 20px;
    margin-top: 5px;
}